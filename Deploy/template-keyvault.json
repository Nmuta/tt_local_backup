{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "subscriptionId": {
      "type": "string",
      "metadata": {
        "description": "The ID of the subscription the Azure App Service Plan belongs to."
      }
    },
    "locationOverride": {
      "type": "string",
      "metadata": {
        "description": "Ignored for this template."
      }
    }
  },
  "variables": {
    "prefix": "[resourceGroup().name]",
    "identityName": "[concat(variables('prefix'), '-identity')]",
    "location": "[if(empty(parameters('locationOverride')), resourceGroup().location, parameters('locationOverride'))]",
    "identityApiVersion": "[providers('Microsoft.ManagedIdentity', 'userAssignedIdentities').apiVersions[0]]",
    "tenantId": "[subscription().tenantId]"
  },
  "resources": [
    {
      "name": "[concat(variables('prefix'), '-keyvault')]",
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2018-02-14",
      "location": "[variables('location')]",
      "tags": {},
      "properties": {
        "tenantId": "[variables('tenantId')]",
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "accessPolicies": [
          {
            "tenantId": "[variables('tenantId')]",
            "objectId": "[reference(concat('Microsoft.ManagedIdentity/userAssignedIdentities/', variables('identityName')), variables('identityApiVersion')).principalId]",
            "permissions": {
              "keys": [
                "get",
                "list"
              ],
              "secrets": [
                "get",
                "list"
              ],
              "certificates": [
                "get",
                "list",
                "getissuers",
                "listissuers"
              ]
            }
          }
        ],
        "enabledForDeployment": true,
        "enabledForDiskEncryption": false,
        "enabledForTemplateDeployment": true,
        "enableSoftDelete": true
      }
    }
  ]
}