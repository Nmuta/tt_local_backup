{
    "extends": "tslint:recommended",
    "rulesDirectory": ["node_modules/codelyzer"],
    "linterOptions": {
      "exclude": [
        "**/node_modules/**/*",
        "**/*.spec.ts",
        "**/*.stub.ts"
      ]
    },
    "rules": {
      "angular-whitespace": false,
      "banana-in-box": true,
      "use-input-property-decorator": true,
      "use-output-property-decorator": true,
      "use-host-property-decorator": true,
      "no-attribute-parameter-decorator": true,
      "no-input-rename": true,
      "no-output-rename": true,
      "no-forward-ref": true,
      "use-life-cycle-interface": true,
      "use-pipe-transform-interface": true,
      "templates-no-negated-async": true,
      "use-view-encapsulation": true,
      "contextual-life-cycle": true,
      "component-class-suffix": true,
      "directive-class-suffix": true,
      "pipe-impure": true,
  
      "directive-selector": [true, "attribute", ["app", "std", "sentry", ""], "camelCase"],
      "component-selector": false,
      "pipe-naming": [false, "camelCase", ["sentry", ""]],
  
      "no-output-on-prefix": false,
      "trackBy-function": false,
  
      "await-promise":  true,
      "no-return-await":  true,
      "no-invalid-this": true, 
      "no-object-literal-type-assertion": true,
      "no-sparse-arrays": true,
      "no-switch-case-fall-through": true,
      "no-use-before-declare": true,
      "trailing-comma": [true, {"esSpecCompliant": true}],
  
      "import-blacklist": [true],
  
      "max-classes-per-file": false,
      "max-line-length": false,
      "object-literal-sort-keys": false, 
      "variable-name": {
          "options": [
              "ban-keywords", 
              "check-format",  
              "allow-pascal-case", 
              "allow-leading-underscore"
          ]
      },
  
      "arrow-parens":  [true, "ban-single-arg-parens"],
      "member-ordering": {"options": {"order": "instance-sandwich"}},
      "ordered-imports": [ 
          true,
          {
              "import-sources-order": "case-insensitive",
              "module-source-path": "full",
              "named-imports-order": "case-insensitive",
              "grouped-imports": true
          }
      ],
      "indent": [true, "spaces", 2], 
      "completed-docs": [
        true,
        {
          "classes": {},  
          "enums": {},
          "functions": {"visibilities": "all"},
          "interfaces": {},
          "methods": {"locations": ["all"], "privacies": ["public", "protected"] },
          "namespaces": {"visibilities": ["exported"]},
          "types": {},
          "tags": {"content": {"see": ["#.*"]}, "exists": ["inheritdoc"]}
        }
      ],
      "array-type":  false
    }
  }
  